<h1>Products</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |products| %>
      <tr>
        <td><%= products.title %></td>
        <td><%= products.description %></td>
        <td><%= products.image_url %></td>
        <td><%= products.price %></td>
        <td><%= link_to 'Show', products %></td>
        <td><%= link_to 'Edit', edit_product_path(products) %></td>
        <td><%= link_to 'Destroy', products, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'New Products', new_product_path %>

